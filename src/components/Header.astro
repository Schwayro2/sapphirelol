---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/shop">Shop</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
                <div class="social-links">
                        <button class="theme-toggle" onclick="window.toggleTheme()" aria-label="Toggle dark mode">
                                <i id="theme-icon" class="fas"></i>
                        </button>
                        <a href="https://discord.gg/AAzErV3Rpt" target="_blank" rel="noopener">
                                <span class="sr-only">Join our Discord</span>
                                <i class="fab fa-discord" style="font-size: 32px; color: #5865F2;"></i>
                        </a>
                </div>
        </nav>
</header>
<style>
        header {
                margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
        .social-links,
        .social-links a,
        .theme-toggle {
                display: flex;
                align-items: center;
        }
        .theme-toggle {
                background: none;
                border: none;
                font-size: 1.1em;
                margin-right: 0.5em;
                cursor: pointer;
                color: var(--black);
        }
        .social-links a {
                margin-right: 0.5em;
        }
	.social-links a:last-child {
		margin-right: 0;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
<script>
  const icon = document.getElementById('theme-icon');

  function updateIcon(isDark) {
    if (isDark) {
      icon.classList.remove('fa-sun');
      icon.classList.add('fa-moon');
    } else {
      icon.classList.remove('fa-moon');
      icon.classList.add('fa-sun');
    }
  }

  window.toggleTheme = function () {
    const root = document.documentElement;
    const isDark = root.getAttribute('data-theme') === 'dark';
    if (isDark) {
      root.removeAttribute('data-theme');
      localStorage.setItem('theme', 'light');
    } else {
      root.setAttribute('data-theme', 'dark');
      localStorage.setItem('theme', 'dark');
    }
    updateIcon(!isDark);
  };

  document.addEventListener('DOMContentLoaded', () => {
    const root = document.documentElement;
    updateIcon(root.getAttribute('data-theme') === 'dark');
  });
</script>
