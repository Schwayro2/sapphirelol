---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'shop'>['data'];

const { title, description, pubDate, updatedDate, heroImage, buyLink, price } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.buy-btn {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				gap: 0.7em;
				margin: 1.2em auto 1.2em auto;
				font-size: 1.12rem;
				padding: 0.82em 2.4em;
				border-radius: 13px;
				background: linear-gradient(90deg, #06b6d4, #6366f1 85%);
				color: #fff;
				font-weight: 700;
				box-shadow: 0 6px 22px 0 rgba(99,102,241,0.14);
				transition: background 0.18s, transform 0.16s;
				border: none;
				cursor: pointer;
				text-decoration: none;
			}
			.buy-btn:hover, .buy-btn:focus {
				background: linear-gradient(95deg, #6366f1, #06b6d4 85%);
				color: #fff;
				transform: scale(1.04) translateY(-2px);
				text-decoration: none;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						{buyLink && (
							<a
								href={buyLink}
								class="buy-btn"
								target="_blank"
								rel="noopener"
							>
								<i class="fa-solid fa-cart-shopping"></i>
								{price ? `Buy Now â€“ $${price}` : "Buy Now"}
							</a>
						)}
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
