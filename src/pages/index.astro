---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style is:global>
      :root {
        --color-primary: #4f46e5; /* Vibrant blue */
        --color-secondary: #f43f5e; /* For highlights */
        --color-text: #374151;
        --color-light: #f9fafb;
        --color-border: #e5e7eb;
        --space-sm: 0.75rem;
        --space-md: 1.5rem;
        --space-lg: 3rem;
        --radius: 8px;
        --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      }
      
      body {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        line-height: 1.6;
        color: var(--color-text);
        background: white;
        margin: 0;
        padding: 0;
      }
      
      main {
        max-width: 1200px;
        margin: 0 auto;
        padding: var(--space-lg);
      }
      
      .hero {
        text-align: center;
        padding: var(--space-lg) 0;
        margin-bottom: var(--space-lg);
        border-bottom: 1px solid var(--color-border);
      }
      
      .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: var(--space-md);
        margin: var(--space-lg) 0;
      }
      
      .product-card {
        background: white;
        border-radius: var(--radius);
        padding: var(--space-md);
        border: 1px solid var(--color-border);
        box-shadow: var(--shadow);
        transition: all 0.3s ease;
      }
      
      .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        border-color: var(--color-primary);
      }
      
      .badge {
        display: inline-block;
        padding: 0.25rem 0.5rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
        margin-right: 0.5rem;
      }
      
      .badge-undetected {
        background: #dcfce7;
        color: #166534;
      }
      
      .badge-updated {
        background: #dbeafe;
        color: #1e40af;
      }
      
      .cta-button {
        display: inline-block;
        background: var(--color-primary);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: var(--radius);
        font-weight: 600;
        margin-top: var(--space-sm);
        transition: background 0.2s;
      }
      
      .cta-button:hover {
        background: #4338ca;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section class="hero">
        <h1 style="font-size: 2.5rem; margin-bottom: var(--space-sm);">Elevate Your Gameplay</h1>
        <p style="font-size: 1.25rem; max-width: 700px; margin: 0 auto;">
          Premium game enhancements designed for competitive players who demand excellence
        </p>
      </section>
      
      <div class="products-grid">
        <div class="product-card">
          <div style="display: flex; justify-content: space-between; align-items: center;">
            <h2 style="margin: 0; color: var(--color-primary);">Fortnite Suite</h2>
            <span class="badge badge-undetected">UNDETECTED</span>
          </div>
          <p style="margin: var(--space-sm) 0;">Complete ESP, aim assistance, and loot radar</p>
          <div style="display: flex; gap: var(--space-sm); margin-bottom: var(--space-sm);">
            <span class="badge badge-updated">UPDATED TODAY</span>
            <span style="color: var(--color-text); font-size: 0.875rem;">v4.2.1</span>
          </div>
          <a href="#" class="cta-button">Get Started →</a>
        </div>
        
        <div class="product-card">
          <div style="display: flex; justify-content: space-between; align-items: center;">
            <h2 style="margin: 0; color: var(--color-primary);">Valorant Toolkit</h2>
            <span class="badge badge-undetected">UNDETECTED</span>
          </div>
          <p style="margin: var(--space-sm) 0;">Triggerbot, recoil control, and radar</p>
          <div style="display: flex; gap: var(--space-sm); margin-bottom: var(--space-sm);">
            <span class="badge badge-updated">UPDATED 1D AGO</span>
            <span style="color: var(--color-text); font-size: 0.875rem;">v3.7.4</span>
          </div>
          <a href="#" class="cta-button">Get Started →</a>
        </div>
        
        <div class="product-card">
          <div style="display: flex; justify-content: space-between; align-items: center;">
            <h2 style="margin: 0; color: var(--color-primary);">Warzone Package</h2>
            <span class="badge badge-undetected">UNDETECTED</span>
          </div>
          <p style="margin: var(--space-sm) 0;">Advanced ESP, aimbot, and item highlights</p>
          <div style="display: flex; gap: var(--space-sm); margin-bottom: var(--space-sm);">
            <span class="badge badge-updated">UPDATED 2D AGO</span>
            <span style="color: var(--color-text); font-size: 0.875rem;">v5.1.3</span>
          </div>
          <a href="#" class="cta-button">Get Started →</a>
        </div>
      </div>
      
      <section style="margin: var(--space-lg) 0; padding: var(--space-lg) 0; border-top: 1px solid var(--color-border);">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: var(--space-lg);">
          <div>
            <h3 style="color: var(--color-primary);">Why Our Solutions?</h3>
            <ul style="padding-left: 1.25rem;">
              <li style="margin-bottom: 0.5rem;">Military-grade encryption</li>
              <li style="margin-bottom: 0.5rem;">Daily anti-cheat bypass updates</li>
              <li style="margin-bottom: 0.5rem;">Precision-tuned for competitive play</li>
              <li style="margin-bottom: 0.5rem;">24/7 customer support</li>
            </ul>
          </div>
          <div>
            <h3 style="color: var(--color-primary);">Trust Indicators</h3>
            <ul style="padding-left: 1.25rem;">
              <li style="margin-bottom: 0.5rem;">3+ years undetected</li>
              <li style="margin-bottom: 0.5rem;">10,000+ active users</li>
              <li style="margin-bottom: 0.5rem;">Money-back guarantee</li>
              <li style="margin-bottom: 0.5rem;">Malware-free guarantee</li>
            </ul>
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
