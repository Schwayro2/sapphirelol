---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style is:global>
      :root {
        --color-primary: #8a2be2; /* Purple accent */
        --color-dark: #1a1a1a;
        --color-text: #e0e0e0;
        --color-bg: #121212;
        --space-sm: 0.5rem;
        --space-md: 1rem;
        --space-lg: 2rem;
        --radius: 4px;
      }
      
      body {
        font-family: 'Segoe UI', system-ui, sans-serif;
        line-height: 1.6;
        color: var(--color-text);
        background: var(--color-bg);
        margin: 0;
        padding: 0;
      }
      
      main {
        max-width: 1200px;
        margin: 0 auto;
        padding: var(--space-lg);
      }
      
      .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: var(--space-lg);
        margin-top: var(--space-lg);
      }
      
      .product-card {
        background: #1e1e1e;
        border-radius: var(--radius);
        padding: var(--space-md);
        border: 1px solid #333;
        transition: transform 0.2s;
      }
      
      .product-card:hover {
        transform: translateY(-5px);
        border-color: var(--color-primary);
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1>üî• Premium Game Enhancements</h1>
      <p class="subtitle">
        Unlock the full potential of your favorite games with our undetected, regularly updated cheats
      </p>
      
      <div class="products-grid">
        <div class="product-card">
          <h2>Fortnite ESP</h2>
          <p>Full player ESP, item radar, and aim assistance</p>
          <p><strong>Status:</strong> Undetected</p>
          <p><strong>Last Updated:</strong> Today</p>
        </div>
        
        <div class="product-card">
          <h2>Valorant Triggerbot</h2>
          <p>Precision aiming assistance with customizable settings</p>
          <p><strong>Status:</strong> Undetected</p>
          <p><strong>Last Updated:</strong> Yesterday</p>
        </div>
        
        <div class="product-card">
          <h2>Call of Duty: Warzone</h2>
          <p>Wallhacks, radar, and recoil control</p>
          <p><strong>Status:</strong> Undetected</p>
          <p><strong>Last Updated:</strong> 2 days ago</p>
        </div>
      </div>
      
      <section style="margin-top: 3rem;">
        <h2>Why Choose Us?</h2>
        <ul>
          <li>‚úÖ 100% undetected - No bans reported</li>
          <li>üîÑ Daily updates to stay ahead of anti-cheat</li>
          <li>üì± Easy-to-use interfaces</li>
          <li>üîí Secure downloads with no malware</li>
          <li>üõ°Ô∏è Custom protection for each game</li>
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
