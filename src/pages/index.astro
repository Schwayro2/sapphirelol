---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style is:global>
      @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap');
      
      :root {
        --color-plasma-1: #6366f1;
        --color-plasma-2: #ec4899;
        --color-plasma-3: #8b5cf6;
        --color-text: #e0e7ff;
        --color-bg: #0f172a;
        --color-card: rgba(15, 23, 42, 0.7);
        --radius-lg: 24px;
        --radius-md: 12px;
        --radius-sm: 6px;
        --shadow-plasma: 0 0 40px rgba(99, 102, 241, 0.2);
        --transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      }
      
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      
      body {
        font-family: 'Space Grotesk', sans-serif;
        line-height: 1.6;
        color: var(--color-text);
        background: var(--color-bg);
        scroll-behavior: smooth;
        -webkit-font-smoothing: antialiased;
      }
      
      main {
        max-width: 1440px;
        margin: 0 auto;
        padding: 0 2rem;
      }
      
      /* Plasma Gradient Effects */
      @keyframes plasma-pulse {
        0% { opacity: 0.8; transform: scale(1); }
        50% { opacity: 0.4; transform: scale(1.2); }
        100% { opacity: 0.8; transform: scale(1); }
      }
      
      /* Hero Section */
      .hero {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        position: relative;
        overflow: hidden;
      }
      
      .hero::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(
          45deg,
          var(--color-plasma-1),
          var(--color-plasma-2),
          var(--color-plasma-3)
        );
        opacity: 0.15;
        filter: blur(100px);
        animation: plasma-pulse 8s infinite;
      }
      
      .hero-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
        padding: 4rem;
        background: var(--color-card);
        backdrop-filter: blur(20px);
        border-radius: var(--radius-lg);
        border: 1px solid rgba(99, 102, 241, 0.2);
        box-shadow: var(--shadow-plasma);
      }
      
      .hero h1 {
        font-size: 4.5rem;
        font-weight: 700;
        margin: 0 0 2rem;
        background: linear-gradient(
          45deg,
          var(--color-plasma-1),
          var(--color-plasma-2),
          var(--color-plasma-3)
        );
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        line-height: 1.1;
      }
      
      .hero p {
        font-size: 1.5rem;
        color: rgba(224, 231, 255, 0.8);
        margin-bottom: 3rem;
      }
      
      /* Games Grid */
      .games-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 3rem;
        padding: 8rem 0;
      }
      
      .game-card {
        position: relative;
        border-radius: var(--radius-lg);
        overflow: hidden;
        transform: translateY(0);
        transition: var(--transition);
      }
      
      .game-card:hover {
        transform: translateY(-10px);
      }
      
      .game-card::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(
          45deg,
          var(--color-plasma-1),
          var(--color-plasma-2),
          var(--color-plasma-3)
        );
        opacity: 0.3;
        z-index: -1;
      }
      
      .game-card::after {
        content: '';
        position: absolute;
        inset: 1px;
        background: var(--color-bg);
        border-radius: var(--radius-lg);
        z-index: -1;
      }
      
      .game-content {
        padding: 2.5rem;
        position: relative;
        z-index: 1;
      }
      
      .game-logo {
        width: 120px;
        height: 120px;
        margin: 0 auto 2rem;
        filter: drop-shadow(0 0 20px rgba(99, 102, 241, 0.3));
        transition: transform 0.4s ease;
      }
      
      .game-card:hover .game-logo {
        transform: scale(1.1) rotate(-5deg);
      }
      
      .game-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        background: linear-gradient(
          45deg,
          var(--color-plasma-1),
          var(--color-plasma-2)
        );
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
      }
      
      .game-details {
        list-style: none;
        padding-left: 0;
      }
      
      .game-details li {
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(99, 102, 241, 0.1);
        display: flex;
        align-items: center;
        gap: 0.75rem;
      }
      
      .game-details li:last-child {
        border-bottom: 0;
      }
      
      /* Floating Animation */
      @keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
        100% { transform: translateY(0px); }
      }
      
      .floating-element {
        position: absolute;
        width: 200px;
        height: 200px;
        background: linear-gradient(
          45deg,
          var(--color-plasma-1),
          var(--color-plasma-2)
        );
        opacity: 0.1;
        filter: blur(60px);
        animation: float 6s infinite;
        z-index: -1;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <!-- Hero Section -->
      <section class="hero">
        <div class="floating-element" style="top: 20%; left: 10%"></div>
        <div class="floating-element" style="top: 60%; right: 15%"></div>
        
        <div class="hero-content animate-on-scroll">
          <h1>Next-Level Gaming Experience</h1>
          <p>Premium enhancements for today's top competitive titles</p>
        </div>
      </section>
      
      <!-- Supported Games -->
      <section class="games-grid">
        <!-- Fortnite -->
        <div class="game-card animate-on-scroll">
          <div class="game-content">
            <img src="/fortnite-logo.png" alt="Fortnite" class="game-logo" />
            <h3 class="game-title">Fortnite</h3>
            <ul class="game-details">
              <li>üü¢ Full ESP System</li>
              <li>üéØ Smart Aim Assist</li>
              <li>üì¶ Loot Radar</li>
              <li>üõ°Ô∏è Undetected</li>
            </ul>
          </div>
        </div>
        
        <!-- Valorant -->
        <div class="game-card animate-on-scroll" style="animation-delay: 0.2s">
          <div class="game-content">
            <img src="/valorant-logo.png" alt="Valorant" class="game-logo" />
            <h3 class="game-title">Valorant</h3>
            <ul class="game-details">
              <li>üî´ Precision Trigger</li>
              <li>üéÆ Recoil Control</li>
              <li>üì° Radar Hack</li>
              <li>üõ°Ô∏è Undetected</li>
            </ul>
          </div>
        </div>
        
        <!-- Warzone -->
        <div class="game-card animate-on-scroll" style="animation-delay: 0.4s">
          <div class="game-content">
            <img src="/warzone-logo.png" alt="Warzone" class="game-logo" />
            <h3 class="game-title">Warzone</h3>
            <ul class="game-details">
              <li>üëÅÔ∏è Advanced ESP</li>
              <li>üéØ Auto Aimbot</li>
              <li>üó∫Ô∏è Map Awareness</li>
              <li>üõ°Ô∏è Undetected</li>
            </ul>
          </div>
        </div>
        
        <!-- Apex Legends -->
        <div class="game-card animate-on-scroll" style="animation-delay: 0.6s">
          <div class="game-content">
            <img src="/apex-logo.png" alt="Apex Legends" class="game-logo" />
            <h3 class="game-title">Apex Legends</h3>
            <ul class="game-details">
              <li>üëª Player ESP</li>
              <li>üîç Item Highlight</li>
              <li>üí® Movement Assist</li>
              <li>üõ°Ô∏è Undetected</li>
            </ul>
          </div>
        </div>
      </section>
    </main>
    
    <Footer />
    
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Parallax effect for floating elements
        document.addEventListener('mousemove', (e) => {
          const elements = document.querySelectorAll('.floating-element');
          const speed = 0.02;
          
          elements.forEach(element => {
            const x = (window.innerWidth - e.pageX * speed) / 100;
            const y = (window.innerHeight - e.pageY * speed) / 100;
            element.style.transform = `translate(${x}px, ${y}px)`;
          });
        });
        
        // Intersection Observer with staggered delays
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              const delay = entry.target.style.animationDelay || '0s';
              setTimeout(() => {
                entry.target.style.opacity = 1;
                entry.target.style.transform = 'translateY(0)';
              }, parseFloat(delay) * 1000);
            }
          });
        }, { threshold: 0.15 });
        
        document.querySelectorAll('.animate-on-scroll').forEach(el => {
          observer.observe(el);
          el.style.opacity = 0;
          el.style.transform = 'translateY(30px)';
          el.style.transition = 'all 0.8s cubic-bezier(0.22, 1, 0.36, 1)';
        });
      });
    </script>
  </body>
</html>
