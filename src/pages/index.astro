---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style is:global>
      :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --text: #1f2937;
        --text-light: #6b7280;
        --bg: #ffffff;
        --card: #f9fafb;
        --border: #e5e7eb;
        --radius: 18px;
        --shadow: 0 4px 24px rgba(99,102,241,0.13);
        --plasma-gradient: linear-gradient(90deg, #ff41ca, #5f007f, #2335be, #c321a5, #2af5ff);
      }
      [data-theme='dark'] {
        --text: #e5e7eb;
        --text-light: #9ca3af;
        --bg: #0f172a;
        --card: #1f2937;
        --border: #334155;
        --shadow: 0 4px 24px rgba(0,0,0,0.6);
      }
      body {
        font-family: 'Inter', sans-serif;
        color: var(--text);
        background: var(--bg);
      }
      main {
        max-width: 1000px;
        margin: auto;
        padding: 1.5rem;
      }

      .hero {
        position: relative;
        text-align: center;
        min-height: 550px;
        padding: 2rem 1rem 3.5rem 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-end;
        overflow: visible;
        background: transparent;
      }

      .hero-bg {
        content: "";
        position: absolute;
        top: 45%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 430px;
        height: 310px;
        border-radius: 50%;
        background: var(--plasma-gradient);
        filter: blur(60px) brightness(1.12) opacity(0.55);
        z-index: 0;
        pointer-events: none;
        animation: plasmaGlow 6s ease-in-out infinite alternate;
      }
      @keyframes plasmaGlow {
        from { filter: blur(60px) brightness(1.08) opacity(0.50);}
        to   { filter: blur(68px) brightness(1.17) opacity(0.60);}
      }

      .hero-imgui {
        z-index: 2;
        width: 370px;
        max-width: 88vw;
        min-width: 220px;
        position: relative;
        margin-bottom: 1.6rem;
        box-shadow: 0 8px 48px 0 rgba(99,102,241,0.17), 0 1.5px 10px rgba(90,0,160,0.13);
        border-radius: 22px;
        background: rgba(255,255,255,0.07);
        backdrop-filter: blur(1.7px) saturate(1.06);
        transition: transform 0.7s cubic-bezier(.77,0,.18,1);
        opacity: 1;
        animation: floatImgui 4.5s ease-in-out infinite alternate;
      }
      @keyframes floatImgui {
        0% { transform: translateY(0) scale(1.0) rotate(-3.2deg);}
        100% { transform: translateY(-18px) scale(1.025) rotate(-5deg);}
      }
      @media (max-width: 700px) {
        .hero {
          min-height: 0;
          padding-top: 2rem;
        }
        .hero-imgui {
          width: 98vw;
          min-width: 0;
          max-width: 97vw;
          margin-bottom: 1rem;
        }
        .hero-bg {
          width: 320px;
          height: 140px;
        }
      }

      .hero h1 {
        font-size: 2.85rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
        margin-top: 0;
        background: var(--plasma-gradient);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        position: relative;
        z-index: 3;
        letter-spacing: -2px;
      }
      .hero p {
        color: var(--text-light);
        margin-bottom: 1.7rem;
        font-size: 1.13rem;
        position: relative;
        z-index: 3;
      }
      .hero-btns {
        display: flex;
        gap: 1.1rem;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 1.6rem;
        z-index: 3;
        position: relative;
      }
      .btn {
        padding: 0.7rem 1.6rem;
        border-radius: 22px;
        font-weight: 600;
        font-size: 1.08rem;
        text-decoration: none;
        border: none;
        outline: none;
        box-shadow: 0 0.5px 4px rgba(99,102,241,0.09);
        cursor: pointer;
        background: white;
        color: var(--primary);
        transition: background 0.2s, color 0.2s, box-shadow 0.2s;
      }
      .btn-primary {
        background: var(--primary);
        color: white;
      }
      .btn-primary:hover, .btn:hover {
        background: var(--primary-dark);
        color: #fff;
        box-shadow: 0 1.5px 16px rgba(90,0,160,0.13);
      }

      /* SECTION TITLES */
      .section-title {
        text-align: center;
        font-size: 1.75rem;
        margin: 3.5rem 0 2.2rem 0;
        background: var(--plasma-gradient);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        letter-spacing: -1.2px;
      }

      /* PRODUCTS GRID */
      .products-grid {
        display: grid;
        gap: 2rem;
        grid-template-columns: 1fr;
      }
      @media (min-width: 700px) {
        .products-grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }
      .card {
        background: var(--card);
        border: 1.5px solid var(--border);
        padding: 1.3rem 1.25rem 1.5rem 1.25rem;
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.5s cubic-bezier(.46,.03,.52,.96);
        position: relative;
        z-index: 1;
        min-height: 210px;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
      }
      .card.visible {
        opacity: 1;
        transform: translateY(0);
      }
      .card h3 {
        background: var(--plasma-gradient);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        font-size: 1.15rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.55rem;
      }
      .card ul {
        margin-top: 0.4rem;
        padding-left: 1.15rem;
        font-size: 0.98rem;
        color: var(--text-light);
        line-height: 1.7;
      }
      /* FEATURES GRID */
      .features-grid {
        display: grid;
        gap: 2rem;
        grid-template-columns: 1fr;
      }
      @media (min-width: 700px) {
        .features-grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }
      .features-grid .card p {
        margin-top: 0.5rem;
        color: var(--text-light);
        font-size: 1.05rem;
      }

      /* TESTIMONIALS */
      .testimonials-grid {
        display: grid;
        gap: 2rem;
        grid-template-columns: 1fr;
      }
      @media (min-width: 700px) {
        .testimonials-grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }
      .testimonials .card {
        min-height: 150px;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
      }
      .testimonials .card p {
        font-size: 1.04rem;
        font-style: italic;
        color: var(--text);
        margin-bottom: 0.6rem;
      }
      .testimonials .card strong {
        color: var(--primary-dark);
        font-size: 0.98rem;
        font-weight: 700;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <!-- HERO SECTION -->
      <section class="hero animate-on-scroll animate__animated animate__fadeInUp">
        <div class="hero-bg"></div>
        <img
          src="https://files.catbox.moe/nw8y4u.png"
          alt="ImGui Menu Showcase"
          class="hero-imgui"
          id="imguiMenu"
          loading="eager"
          draggable="false"
        />
        <h1>Next-Level Game Enhancements</h1>
        <p>
          Discover cutting-edge tools engineered for elite gamers who demand stealth, precision, and top-tier performance.
        </p>
        <div class="hero-btns">
          <a href="#products" class="btn btn-primary">Explore Products</a>
          <a href="#features" class="btn" style="border: 1.5px solid var(--primary); background: rgba(99,102,241,0.03);">How It Works</a>
        </div>
      </section>

      <!-- PRODUCTS SECTION -->
      <section id="products" class="animate-on-scroll">
        <h2 class="section-title">Premium Products</h2>
        <div class="products-grid">
          <div class="card">
            <h3>BO6 / Warzone External</h3>
            <ul>
              <li>Aimbot with smoothing</li>
              <li>ESP (Players, Loot, Vehicles)</li>
              <li>Config support</li>
              <li>Stream-proof</li>
            </ul>
          </div>
          <div class="card">
            <h3>Permanent HWID Spoofer</h3>
            <ul>
              <li>UEFI kernel-based</li>
              <li>Spoofs serials & SMBIOS</li>
              <li>Stealth boot cleanup</li>
              <li>Persistent across reboots</li>
            </ul>
          </div>
          <div class="card">
            <h3>Temporary HWID Spoofer</h3>
            <ul>
              <li>Instant spoof on launch</li>
              <li>Resets on reboot</li>
              <li>Compatible with most AC</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- FEATURES SECTION -->
      <section id="features" class="animate-on-scroll">
        <h2 class="section-title">Why Choose Us?</h2>
        <div class="features-grid">
          <div class="card">
            <h3><i class="fas fa-shield-alt"></i> Undetected!</h3>
            <p>Our software has its own stealthy methods and receives consistent backend updates to avoid detection by modern anti-cheat systems.</p>
          </div>
          <div class="card">
            <h3><i class="fas fa-bolt"></i> Good Performance</h3>
            <p>Built for speed and stability, our solutions are lightweight and optimized to maintain flawless performance without game interruptions.</p>
          </div>
          <div class="card">
            <h3><i class="fas fa-sync-alt"></i> Always Updated</h3>
            <p>Stay ahead with tools that are updated daily, ensuring compatibility with every patch, update, and meta change in your favorite games.</p>
          </div>
        </div>
      </section>

      <!-- TESTIMONIALS SECTION -->
      <section class="testimonials animate-on-scroll">
        <h2 class="section-title">User Feedback</h2>
        <div class="testimonials-grid">
          <div class="card">
            <p>"I've been using the Fortnite Suite across multiple seasons—still undetected, insanely responsive, and always ahead of the curve."</p>
            <strong>- ProPlayer123</strong>
          </div>
          <div class="card">
            <p>"Went from Diamond to Immortal in just two weeks thanks to the seamless aim assist and smart radar features. Unreal advantage!"</p>
            <strong>- CompetitiveGamer</strong>
          </div>
          <div class="card">
            <p>"Support was lightning-fast and extremely helpful. Setup was smooth and I felt confident within minutes of installing."</p>
            <strong>- StreamerXYZ</strong>
          </div>
        </div>
      </section>
    </main>
    <Footer />
    <script>
      // Animate on scroll for cards/sections
      document.addEventListener('DOMContentLoaded', () => {
        const animatedEls = document.querySelectorAll('.animate-on-scroll, .card');
        const observer = new IntersectionObserver(entries => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
            } else {
              entry.target.classList.remove('visible');
            }
          });
        }, { threshold: 0.1 });
        animatedEls.forEach(el => observer.observe(el));

        // Parallax for ImGui menu image in hero (bonus: slight tilt with scroll)
        const imguiMenu = document.getElementById('imguiMenu');
        if (imguiMenu) {
          window.addEventListener('scroll', () => {
            const scrolled = window.scrollY;
            imguiMenu.style.transform =
              `translateY(${-scrolled/14}px) scale(1.06) rotate(${-3.5-scrolled/170}deg)`;
          });
        }
      });
    </script>
  </body>
</html>
