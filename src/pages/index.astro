---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';
import { getCollection } from 'astro:content';

let products = [];
try {
  const shopCollection = await getCollection('shop');
  if (shopCollection?.length) {
    products = shopCollection.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
  }
} catch (error) {
  console.error('Error loading products:', error);
}
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Solutions | ${SITE_TITLE}`} description="Premium gaming enhancement tools and solutions" />
  </head>
  <body>
    <Header />
    
    <!-- Hero Section -->
    <section class="shop-hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">Premium Gaming Solutions</h1>
          <p class="hero-subtitle">Professionally developed tools to enhance your gaming experience</p>
          <div class="hero-search">
            <div class="search-bar">
              <i class="fas fa-search search-icon"></i>
              <input type="text" placeholder="Search solutions..." class="search-input">
            </div>
          </div>
        </div>
        <div class="hero-background">
          <div class="hero-shape shape-1"></div>
          <div class="hero-shape shape-2"></div>
          <div class="hero-shape shape-3"></div>
        </div>
      </div>
    </section>
    
    <!-- Featured Product -->
    <section class="featured-product">
      <div class="container">
        <div class="featured-card">
          <div class="featured-content">
            <div class="featured-badge">Featured</div>
            <h2 class="featured-title">Performance Suite Pro</h2>
            <p class="featured-description">Our flagship solution with comprehensive features for serious gamers. Includes advanced targeting assistance, visual enhancements, and custom configurations.</p>
            <ul class="featured-features">
              <li><i class="fas fa-check"></i> Precision targeting system</li>
              <li><i class="fas fa-check"></i> Advanced visual enhancements</li>
              <li><i class="fas fa-check"></i> Custom configuration profiles</li>
              <li><i class="fas fa-check"></i> Streaming compatibility mode</li>
              <li><i class="fas fa-check"></i> Regular updates and support</li>
            </ul>
            <div class="featured-price">$59.99</div>
            <a href="#" class="btn btn-primary featured-button">View Details</a>
          </div>
          <div class="featured-image">
            <img src="https://files.catbox.moe/nw8y4u.png" alt="Performance Suite Pro">
          </div>
        </div>
      </div>
    </section>
    
    <!-- Products Grid -->
    <section class="products-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">All Solutions</h2>
          <div class="section-divider"></div>
        </div>
        
        <div class="filters">
          <div class="filter-group">
            <label>Category:</label>
            <select class="filter-select">
              <option value="all">All Categories</option>
              <option value="performance">Performance</option>
              <option value="visual">Visual Enhancement</option>
              <option value="system">System Tools</option>
            </select>
          </div>
          <div class="filter-group">
            <label>Sort By:</label>
            <select class="filter-select">
              <option value="popular">Most Popular</option>
              <option value="newest">Newest</option>
              <option value="price-low">Price: Low to High</option>
              <option value="price-high">Price: High to Low</option>
            </select>
          </div>
        </div>
        
        {products.length > 0 ? (
          <div class="products-grid">
            {products.map((product) => (
              <div class="product-card">
                <div class="product-image-container">
                  <img src={product.data.heroImage || "https://files.catbox.moe/nw8y4u.png"} alt={product.data.title} class="product-image">
                </div>
                <div class="product-content">
                  <h3 class="product-title">
                    <i class={product.data.icon || "fas fa-cube"}></i> {product.data.title}
                  </h3>
                  <div class="product-price">${product.data.price || "39.99"}</div>
                  <p class="product-description">{product.data.description || "Advanced gaming enhancement tool with premium features."}</p>
                  <a href={`/shop/${product.slug}/`} class="btn btn-primary product-button">View Details</a>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="empty-state">
            <div class="empty-icon">
              <i class="fas fa-box-open"></i>
            </div>
            <h3>Products Coming Soon</h3>
            <p>Our team is working on new solutions. Check back soon or join our Discord for updates!</p>
            <a href="https://discord.gg/AAzErV3Rpt" target="_blank" class="btn btn-primary">
              <i class="fab fa-discord"></i> Join Discord
            </a>
          </div>
        )}
      </div>
    </section>
    
    <!-- Custom Solutions -->
    <section class="custom-solutions">
      <div class="container">
        <div class="custom-card">
          <div class="custom-content">
            <h2>Need a Custom Solution?</h2>
            <p>We offer tailored gaming enhancement tools designed specifically for your needs. Contact our team to discuss custom development options.</p>
            <a href="https://discord.gg/AAzErV3Rpt" target="_blank" class="btn btn-accent">Contact Us</a>
          </div>
        </div>
      </div>
    </section>
    
    <Footer />
    
    <script>
      // Search functionality
      document.addEventListener('DOMContentLoaded', () => {
        const searchInput = document.querySelector('.search-input');
        const productCards = document.querySelectorAll('.product-card');
        
        if (searchInput && productCards.length) {
          searchInput.addEventListener('input', (e) => {
            const searchTerm = e.target.value.toLowerCase();
            
            productCards.forEach(card => {
              const title = card.querySelector('.product-title').textContent.toLowerCase();
              const description = card.querySelector('.product-description').textContent.toLowerCase();
              
              if (title.includes(searchTerm) || description.includes(searchTerm)) {
                card.style.display = 'block';
              } else {
                card.style.display = 'none';
              }
            });
          });
        }
        
        // Animation on scroll
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('animate-visible');
            }
          });
        }, { threshold: 0.1 });
        
        document.querySelectorAll('.product-card, .featured-card, .custom-card').forEach(el => {
          observer.observe(el);
        });
      });
    </script>
  </body>
</html>

<style>
  /* Shop Hero Section */
  .shop-hero {
    background: var(--primary-gradient);
    color: white;
    padding: var(--space-3xl) 0;
    position: relative;
    overflow: hidden;
  }
  
  .hero-content {
    text-align: center;
    position: relative;
    z-index: 2;
  }
  
  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: var(--space-md);
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    max-width: 600px;
    margin: 0 auto var(--space-xl);
    opacity: 0.9;
  }
  
  .hero-search {
    max-width: 500px;
    margin: 0 auto;
  }
  
  .search-bar {
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-pill);
    padding: var(--space-xs) var(--space-md);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .search-icon {
    margin-right: var(--space-sm);
    color: rgba(255, 255, 255, 0.8);
  }
  
  .search-input {
    background: transparent;
    border: none;
    color: white;
    font-size: 1rem;
    padding: var(--space-sm) 0;
    width: 100%;
    outline: none;
  }
  
  .search-input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }
  
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .hero-shape {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.2;
  }
  
  .shape-1 {
    top: -10%;
    left: 10%;
    width: 300px;
    height: 300px;
    background: var(--electric-cyan);
  }
  
  .shape-2 {
    bottom: -20%;
    right: 10%;
    width: 400px;
    height: 400px;
    background: var(--royal-purple);
  }
  
  .shape-3 {
    top: 40%;
    right: 30%;
    width: 200px;
    height: 200px;
    background: var(--neon-pink);
  }
  
  /* Featured Product */
  .featured-product {
    padding: var(--space-3xl) 0;
    background-color: white;
  }
  
  .featured-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    background: #f8f9fc;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-medium);
    opacity: 0;
    transform: translateY(30px);
    animation: fadeIn 0.5s ease forwards;
  }
  
  .featured-content {
    padding: var(--space-2xl);
    display: flex;
    flex-direction: column;
  }
  
  .featured-badge {
    display: inline-block;
    background: var(--cta-gradient);
    color: white;
    padding: var(--space-xs) var(--space-md);
    border-radius: var(--radius-pill);
    font-weight: 600;
    font-size: 0.875rem;
    margin-bottom: var(--space-md);
    align-self: flex-start;
  }
  
  .featured-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: var(--space-md);
    color: var(--deep-indigo);
  }
  
  .featured-description {
    color: #666;
    margin-bottom: var(--space-lg);
    font-size: 1.1rem;
    line-height: 1.6;
  }
  
  .featured-features {
    list-style: none;
    margin-bottom: var(--space-lg);
  }
  
  .featured-features li {
    margin-bottom: var(--space-sm);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }
  
  .featured-features li i {
    color: var(--success);
  }
  
  .featured-price {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--sapphire-blue);
    margin-bottom: var(--space-lg);
    margin-top: auto;
  }
  
  .featured-button {
    align-self: flex-start;
  }
  
  .featured-image {
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--primary-gradient);
    padding: var(--space-xl);
  }
  
  .featured-image img {
    max-width: 100%;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-strong);
    transform: perspective(1000px) rotateY(-5deg);
    transition: transform 0.5s ease;
  }
  
  .featured-image img:hover {
    transform: perspective(1000px) rotateY(0);
  }
  
  /* Products Section */
  .products-section {
    padding: var(--space-3xl) 0;
    background-color: #f8f9fc;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: var(--space-xl);
  }
  
  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: var(--space-md);
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }
  
  .section-divider {
    height: 4px;
    width: 60px;
    background: var(--primary-gradient);
    margin: 0 auto;
    border-radius: var(--radius-pill);
  }
  
  .filters {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--space-xl);
    flex-wrap: wrap;
    gap: var(--space-md);
  }
  
  .filter-group {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }
  
  .filter-select {
    padding: var(--space-xs) var(--space-md);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    background: white;
    color: var(--midnight-black);
    font-size: 0.95rem;
    outline: none;
  }
  
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-xl);
  }
  
  .product-card {
    background: white;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-subtle);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeIn 0.5s ease forwards;
    animation-delay: calc(var(--delay, 0) * 0.1s);
  }
  
  .product-card:nth-child(1) { --delay: 1; }
  .product-card:nth-child(2) { --delay: 2; }
  .product-card:nth-child(3) { --delay: 3; }
  .product-card:nth-child(4) { --delay: 4; }
  .product-card:nth-child(5) { --delay: 5; }
  .product-card:nth-child(6) { --delay: 6; }
  
  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-medium);
  }
  
  .product-image-container {
    height: 200px;
    overflow: hidden;
    background: var(--primary-gradient);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .product-card:hover .product-image {
    transform: scale(1.05);
  }
  
  .product-content {
    padding: var(--space-lg);
  }
  
  .product-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--space-xs);
    color: var(--deep-indigo);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }
  
  .product-title i {
    color: var(--sapphire-blue);
  }
  
  .product-price {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--sapphire-blue);
    margin-bottom: var(--space-sm);
  }
  
  .product-description {
    color: #666;
    margin-bottom: var(--space-md);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .product-button {
    width: 100%;
    text-align: center;
  }
  
  /* Empty State */
  .empty-state {
    background: white;
    border-radius: var(--radius-lg);
    padding: var(--space-3xl) var(--space-xl);
    text-align: center;
    box-shadow: var(--shadow-subtle);
  }
  
  .empty-icon {
    font-size: 3rem;
    color: var(--sapphire-blue);
    margin-bottom: var(--space-lg);
    opacity: 0.5;
  }
  
  .empty-state h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: var(--space-md);
    color: var(--deep-indigo);
  }
  
  .empty-state p {
    color: #666;
    margin-bottom: var(--space-xl);
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }
  
  /* Custom Solutions */
  .custom-solutions {
    padding: var(--space-3xl) 0;
    background-color: white;
  }
  
  .custom-card {
    background: var(--primary-gradient);
    border-radius: var(--radius-lg);
    padding: var(--space-2xl);
    color: white;
    text-align: center;
    box-shadow: var(--shadow-medium);
    opacity: 0;
    transform: translateY(30px);
    animation: fadeIn 0.5s ease forwards;
  }
  
  .custom-content {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .custom-content h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: var(--space-md);
  }
  
  .custom-content p {
    margin-bottom: var(--space-xl);
    font-size: 1.1rem;
    opacity: 0.9;
  }
  
  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive Styles */
  @media (max-width: 992px) {
    .featured-card {
      grid-template-columns: 1fr;
    }
    
    .featured-image {
      order: -1;
    }
    
    .hero-title {
      font-size: 2.5rem;
    }
  }
  
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .filters {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .custom-content h2 {
      font-size: 1.75rem;
    }
  }
</style>

