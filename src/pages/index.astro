---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style is:global>
      :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --text: #1f2937;
        --text-light: #6b7280;
        --bg: #ffffff;
        --card: #f9fafb;
        --border: #e5e7eb;
        --radius: 18px;
        --shadow: 0 4px 24px rgba(99,102,241,0.13);
        --plasma-gradient: linear-gradient(90deg, #ff41ca, #5f007f, #2335be, #c321a5, #2af5ff);
      }
      body {
        font-family: 'Inter', sans-serif;
        color: var(--text);
        background: var(--bg);
      }
      main {
        max-width: 1000px;
        margin: auto;
        padding: 1.5rem;
      }

      .hero {
        position: relative;
        text-align: center;
        min-height: 550px;
        padding: 2rem 1rem 3.5rem 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-end;
        overflow: visible;
        background: transparent;
      }

      .hero-bg {
        content: "";
        position: absolute;
        top: 45%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 430px;
        height: 310px;
        border-radius: 50%;
        background: var(--plasma-gradient);
        filter: blur(60px) brightness(1.12) opacity(0.55);
        z-index: 0;
        pointer-events: none;
        animation: plasmaGlow 6s ease-in-out infinite alternate;
      }
      @keyframes plasmaGlow {
        from { filter: blur(60px) brightness(1.08) opacity(0.50);}
        to   { filter: blur(68px) brightness(1.17) opacity(0.60);}
      }

      .hero-imgui {
        z-index: 2;
        width: 370px;
        max-width: 88vw;
        min-width: 220px;
        position: relative;
        margin-bottom: 1.6rem;
        box-shadow: 0 8px 48px 0 rgba(99,102,241,0.17), 0 1.5px 10px rgba(90,0,160,0.13);
        border-radius: 22px;
        background: rgba(255,255,255,0.07);
        backdrop-filter: blur(1.7px) saturate(1.06);
        transition: transform 0.7s cubic-bezier(.77,0,.18,1);
        opacity: 1;
        animation: floatImgui 4.5s ease-in-out infinite alternate;
      }
      @keyframes floatImgui {
        0% { transform: translateY(0) scale(1.0) rotate(-3.2deg);}
        100% { transform: translateY(-18px) scale(1.025) rotate(-5deg);}
      }
      @media (max-width: 700px) {
        .hero {
          min-height: 0;
          padding-top: 2rem;
        }
        .hero-imgui {
          width: 98vw;
          min-width: 0;
          max-width: 97vw;
          margin-bottom: 1rem;
        }
        .hero-bg {
          width: 320px;
          height: 140px;
        }
      }

      .hero h1 {
        font-size: 2.85rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
        margin-top: 0;
        background: var(--plasma-gradient);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        position: relative;
        z-index: 3;
        letter-spacing: -2px;
      }
      .hero p {
        color: var(--text-light);
        margin-bottom: 1.7rem;
        font-size: 1.13rem;
        position: relative;
        z-index: 3;
      }
      .hero-btns {
        display: flex;
        gap: 1.1rem;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 1.6rem;
        z-index: 3;
        position: relative;
      }
      .btn {
        padding: 0.7rem 1.6rem;
        border-radius: 22px;
        font-weight: 600;
        font-size: 1.08rem;
        text-decoration: none;
        border: none;
        outline: none;
        box-shadow: 0 0.5px 4px rgba(99,102,241,0.09);
        cursor: pointer;
        background: white;
        color: var(--primary);
        transition: background 0.2s, color 0.2s, box-shadow 0.2s;
      }
      .btn-primary {
        background: var(--primary);
        color: white;
      }
      .btn-primary:hover, .btn:hover {
        background: var(--primary-dark);
        color: #fff;
        box-shadow: 0 1.5px 16px rgba(90,0,160,0.13);
      }
      /* (rest of your styles remain as you have) */
    </style>
  </head>
  <body>
    <Header />
    <main>
      <!-- HERO SECTION REWORKED -->
      <section class="hero animate-on-scroll">
        <div class="hero-bg"></div>
        <img
          src="https://files.catbox.moe/s0z1tu.png"
          alt="ImGui Menu Showcase"
          class="hero-imgui"
          id="imguiMenu"
          loading="eager"
          draggable="false"
        />
        <h1>Next-Level Game Enhancements</h1>
        <p>
          Discover cutting-edge tools engineered for elite gamers who demand stealth, precision, and top-tier performance.
        </p>
        <div class="hero-btns">
          <a href="#products" class="btn btn-primary">Explore Products</a>
          <a href="#features" class="btn" style="border: 1.5px solid var(--primary); background: rgba(99,102,241,0.03);">How It Works</a>
        </div>
      </section>

      <!-- (rest of your page, unchanged) -->
      <!-- ... -->
      <!-- products, features, testimonials, etc -->
    </main>
    <Footer />
    <script>
      // Animate on scroll for cards/sections
      document.addEventListener('DOMContentLoaded', () => {
        const animatedEls = document.querySelectorAll('.animate-on-scroll, .card');
        const observer = new IntersectionObserver(entries => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
            } else {
              entry.target.classList.remove('visible');
            }
          });
        }, { threshold: 0.1 });
        animatedEls.forEach(el => observer.observe(el));

        // Parallax for ImGui menu image in hero (bonus: slight tilt with scroll)
        const imguiMenu = document.getElementById('imguiMenu');
        if (imguiMenu) {
          window.addEventListener('scroll', () => {
            const scrolled = window.scrollY;
            imguiMenu.style.transform =
              `translateY(${-scrolled/14}px) scale(1.06) rotate(${-3.5-scrolled/170}deg)`;
          });
        }
      });
    </script>
  </body>
</html>
