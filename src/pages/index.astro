---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style is:global>
      :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --text: #1f2937;
        --text-light: #6b7280;
        --bg: #ffffff;
        --card: #f9fafb;
        --border: #e5e7eb;
        --radius: 10px;
        --shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
        --plasma-gradient: linear-gradient(90deg, #ff41ca, #5f007f, #2335be, #c321a5, #2af5ff);
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: 'Inter', sans-serif;
        color: var(--text);
        background: var(--bg);
        line-height: 1.5;
        scroll-behavior: smooth;
      }

      main {
        max-width: 1000px;
        margin: auto;
        padding: 1.5rem;
      }

      .hero {
        text-align: center;
        padding: 5rem 1rem 3rem;
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.8s cubic-bezier(.46,.03,.52,.96);
        position: relative;
        overflow: visible;
        min-height: 340px;
      }

      .hero.visible {
        opacity: 1;
        transform: translateY(0);
      }

      .hero-imgui {
        position: absolute;
        left: 54%;
        top: 55%;
        transform: translate(-50%, -55%) scale(1) rotate(-2deg);
        z-index: 2;
        pointer-events: none;
        width: 340px;
        max-width: 70vw;
        min-width: 220px;
        filter: drop-shadow(0 8px 32px rgba(99,102,241,0.19));
        transition: transform 0.7s cubic-bezier(.77,0,.18,1);
        will-change: transform, filter;
        opacity: 0.98;
        animation: floatImgui 3.5s ease-in-out infinite alternate;
      }
      @keyframes floatImgui {
        0% { transform: translate(-50%, -55%) scale(1) rotate(-2deg);}
        100% { transform: translate(-50%, -62%) scale(1.025) rotate(-5deg);}
      }
      @media (max-width: 700px) {
        .hero-imgui { display: none; }
        .hero { min-height: 0; }
      }

      .hero h1 {
        font-size: 2.5rem;
        font-weight: 700;
        background: var(--plasma-gradient);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        margin-bottom: 0.75rem;
        position: relative;
        z-index: 2;
      }

      .hero p {
        color: var(--text-light);
        margin-bottom: 1.5rem;
        font-size: 1.125rem;
        position: relative;
        z-index: 2;
      }

      .btn {
        padding: 0.65rem 1.25rem;
        border-radius: var(--radius);
        font-weight: 600;
        text-decoration: none;
        transition: 0.3s ease;
        position: relative;
        z-index: 2;
      }

      .btn-primary {
        background: var(--primary);
        color: white;
      }

      .btn-primary:hover {
        background: var(--primary-dark);
      }

      .section-title {
        text-align: center;
        font-size: 1.75rem;
        margin: 3rem 0 1.5rem;
        background: var(--plasma-gradient);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
      }

      .grid {
        display: grid;
        gap: 1.5rem;
      }

      @media (min-width: 768px) {
        .products-grid, .testimonials-grid {
          grid-template-columns: repeat(3, 1fr);
        }
        .features-grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      .card {
        background: var(--card);
        border: 1px solid var(--border);
        padding: 1.25rem;
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.5s cubic-bezier(.46,.03,.52,.96);
        position: relative;
      }

      .card.visible {
        opacity: 1;
        transform: translateY(0);
      }

      .card h3 {
        background: var(--plasma-gradient);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        font-size: 1.2rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      @keyframes fadeOut {
        from { opacity: 1; transform: translateY(0); }
        to { opacity: 0; transform: translateY(20px); }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section class="hero animate-on-scroll">
        <h1>Next-Level Game Enhancements</h1>
        <p>Discover cutting-edge tools engineered for elite gamers who demand stealth, precision, and top-tier performance.</p>
        <div style="display: flex; gap: 0.75rem; flex-wrap: wrap; justify-content: center;">
          <a href="#products" class="btn btn-primary">Explore Products</a>
          <a href="#features" class="btn" style="border: 1px solid var(--border); color: var(--primary);">How It Works</a>
        </div>
        <!-- ImGui menu floating image -->
        <img
          src="/DbdTUroqtUw-HD-removebg-preview.png"
          alt="ImGui Menu Screenshot"
          class="hero-imgui"
          id="imguiMenu"
        />
      </section>
      <!-- (the rest of your page continues as before) -->
      <section id="products" class="animate-on-scroll">
        <h2 class="section-title">Premium Products</h2>
        <div class="grid products-grid">
          <div class="card">
            <h3>BO6 / Warzone External</h3>
            <ul style="margin-top: 0.5rem; padding-left: 1.25rem; font-size: 0.95rem;">
              <li>Aimbot with smoothing</li>
              <li>ESP (Players, Loot, Vehicles)</li>
              <li>Config support</li>
              <li>Stream-proof</li>
            </ul>
          </div>
          <div class="card">
            <h3>Permanent HWID Spoofer</h3>
            <ul style="margin-top: 0.5rem; padding-left: 1.25rem; font-size: 0.95rem;">
              <li>UEFI kernel-based</li>
              <li>Spoofs serials & SMBIOS</li>
              <li>Stealth boot cleanup</li>
              <li>Persistent across reboots</li>
            </ul>
          </div>
          <div class="card">
            <h3>Temporary HWID Spoofer</h3>
            <ul style="margin-top: 0.5rem; padding-left: 1.25rem; font-size: 0.95rem;">
              <li>Instant spoof on launch</li>
              <li>Resets on reboot</li>
              <li>Compatible with most AC</li>
            </ul>
          </div>
        </div>
      </section>
      <section id="features" class="animate-on-scroll">
        <h2 class="section-title">Why Choose Us?</h2>
        <div class="grid features-grid">
          <div class="card">
            <h3><i class="fas fa-shield-alt"></i> Undetected!</h3>
            <p>Our software has its own stealthty methods and has consistent backend updates to avoid detection by modern anti-cheat systems.</p>
          </div>
          <div class="card">
            <h3><i class="fas fa-bolt"></i> Good Performance</h3>
            <p>Built for speed and stability, our solutions are lightweight and optimized to maintain flawless performance without game interruptions.</p>
          </div>
          <div class="card">
            <h3><i class="fas fa-sync-alt"></i> Always Updated</h3>
            <p>Stay ahead with tools that are updated daily, ensuring compatibility with every patch, update, and meta change in your favorite games.</p>
          </div>
        </div>
      </section>
      <section class="testimonials animate-on-scroll">
        <h2 class="section-title">User Feedback</h2>
        <div class="grid testimonials-grid">
          <div class="card"> <p>"I've been using the Fortnite Suite across multiple seasonsâ€”still undetected, insanely responsive, and always ahead of the curve."</p> <strong>- ProPlayer123</strong> </div>
          <div class="card"> <p>"Went from Diamond to Immortal in just two weeks thanks to the seamless aim assist and smart radar features. Unreal advantage!"</p> <strong>- CompetitiveGamer</strong> </div>
          <div class="card"> <p>"Support was lightning-fast and extremely helpful. Setup was smooth and I felt confident within minutes of installing."</p> <strong>- StreamerXYZ</strong> </div>
        </div>
      </section>
    </main>
    <Footer />
    <script>
      // Scroll animation (already smooth), but let's add parallax on the ImGui image!
      document.addEventListener('DOMContentLoaded', () => {
        // Animate on scroll for cards/sections
        const animatedEls = document.querySelectorAll('.animate-on-scroll, .card');
        const observer = new IntersectionObserver(entries => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
            } else {
              entry.target.classList.remove('visible');
            }
          });
        }, { threshold: 0.1 });
        animatedEls.forEach(el => observer.observe(el));

        // Parallax for ImGui menu image in hero
        const imguiMenu = document.getElementById('imguiMenu');
        if (imguiMenu) {
          window.addEventListener('scroll', () => {
            const scrolled = window.scrollY;
            // Move up & down a little as page scrolls, with a clamp
            imguiMenu.style.transform =
              `translate(-50%, calc(-55% - ${Math.min(scrolled / 8, 35)}px)) scale(1.05) rotate(${(-2 - scrolled / 150)}deg)`;
          });
        }
      });
    </script>
  </body>
</html>
