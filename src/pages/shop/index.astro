---
// Import components and constants
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

// Get blog posts sorted by publication date (newest first)
const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      /* Main layout styles */
      main {
        max-width: 960px;
        margin: 0 auto;
        padding: 1rem;
      }
      
      /* Posts grid */
      .posts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        list-style: none;
        padding: 0;
        margin: 2rem 0;
      }
      
      /* Featured post (first item) */
      .featured-post {
        grid-column: 1 / -1;
        text-align: center;
      }
      
      .featured-post .post-title {
        font-size: 2rem;
        margin: 1rem 0 0.5rem;
      }
      
      /* Regular posts */
      .post-card {
        transition: transform 0.2s ease;
      }
      
      .post-card:hover {
        transform: translateY(-5px);
      }
      
      .post-image {
        width: 100%;
        height: auto;
        border-radius: 12px;
        margin-bottom: 1rem;
        transition: box-shadow 0.2s ease;
      }
      
      .post-card:hover .post-image {
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
      }
      
      .post-title {
        font-size: 1.25rem;
        margin: 0.5rem 0;
        color: var(--black);
      }
      
      .post-date {
        color: var(--gray);
        font-size: 0.9rem;
        margin: 0;
      }
      
      .post-link {
        text-decoration: none;
        color: inherit;
      }
      
      .post-card:hover .post-title,
      .post-card:hover .post-date {
        color: var(--accent);
      }
      
      /* Responsive adjustments */
      @media (max-width: 768px) {
        .posts-grid {
          grid-template-columns: 1fr;
          gap: 1.5rem;
        }
        
        .featured-post .post-title {
          font-size: 1.5rem;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    
    <main>
      <h1>Welcome to {SITE_TITLE}</h1>
      <p class="site-description">{SITE_DESCRIPTION}</p>
      
      <section aria-label="Latest blog posts">
        <ul class="posts-grid">
          {posts.map((post, index) => (
            <li class={index === 0 ? 'featured-post' : 'post-card'}>
              <a href={`/blog/${post.id}/`} class="post-link">
                <img 
                  width={720} 
                  height={360} 
                  src={post.data.heroImage} 
                  alt={post.data.title} 
                  class="post-image"
                  loading={index === 0 ? 'eager' : 'lazy'}
                />
                <h2 class="post-title">{post.data.title}</h2>
                <p class="post-date">
                  <FormattedDate date={post.data.pubDate} />
                </p>
              </a>
            </li>
          ))}
        </ul>
      </section>
    </main>
    
    <Footer />
  </body>
</html>
