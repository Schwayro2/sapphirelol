---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';
import { getCollection } from 'astro:content';

let products = [];
try {
  const shopCollection = await getCollection('shop');
  if (shopCollection?.length) {
    products = shopCollection.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
  }
} catch (error) {
  console.error('Error loading products:', error);
}
---

<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} Shop`} description="Premium gaming enhancements and tools" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <style is:global>
      :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --accent: #818cf8;
        --pink: #f472b6;
        --cyan: #06b6d4;
        --text: #1f2937;
        --text-light: #6b7280;
        --bg: #ffffff;
        --card: #f9fafb;
        --glass: rgba(255,255,255,0.80);
        --border: #e5e7eb;
        --radius: 18px;
        --shadow: 0 4px 24px rgba(99,102,241,0.13);
        --card-blur: blur(18px);
        --plasma-gradient: linear-gradient(90deg, #ff41ca, #5f007f, #2335be, #c321a5, #2af5ff);
        --transition: all 0.36s cubic-bezier(.47,1.64,.41,.8);
      }
      [data-theme='dark'] {
        --bg: #0f172a;
        --text: #e5e7eb;
        --text-light: #9ca3af;
        --card: #1f2937;
        --border: #334155;
        --shadow: 0 4px 24px rgba(0,0,0,0.6);
        --glass: rgba(31,41,55,0.8);
      }

      html, body {
        font-family: 'Inter', sans-serif;
        background: var(--bg);
        color: var(--text);
        margin: 0;
        scroll-behavior: smooth;
        min-height: 100%;
      }
      main {
        max-width: 1280px;
        margin: auto;
        padding: 3rem 1.2rem 2.5rem 1.2rem;
      }

      /* HERO */
      .hero {
        position: relative;
        text-align: center;
        min-height: 450px;
        padding: 2rem 1rem 3rem 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-end;
        overflow: visible;
        background: transparent;
      }
      .hero-bg {
        content: "";
        position: absolute;
        top: 45%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 430px;
        height: 310px;
        border-radius: 50%;
        background: var(--plasma-gradient);
        filter: blur(60px) brightness(1.12) opacity(0.55);
        z-index: 0;
        pointer-events: none;
        animation: plasmaGlow 6s ease-in-out infinite alternate;
      }
      @keyframes plasmaGlow {
        from { filter: blur(60px) brightness(1.08) opacity(0.50); }
        to   { filter: blur(68px) brightness(1.17) opacity(0.60); }
      }
      .hero h1 {
        font-size: 3.1rem;
        font-weight: 800;
        margin-bottom: 1.1rem;
        letter-spacing: -2px;
        background: linear-gradient(90deg, var(--primary), var(--pink), var(--cyan));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      .hero p {
        font-size: 1.34rem;
        color: var(--text-light);
        margin-bottom: 1.7rem;
        font-weight: 500;
      }
      .hero-btns {
        display: flex;
        gap: 1.1rem;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 1.6rem;
        z-index: 3;
        position: relative;
      }
      .btn {
        display: inline-block;
        background: linear-gradient(95deg, var(--primary), var(--accent));
        color: white;
        padding: 0.88rem 2.3rem;
        border-radius: var(--radius);
        font-weight: 700;
        text-decoration: none;
        font-size: 1.11rem;
        border: none;
        cursor: pointer;
        box-shadow: 0 2px 14px 0 rgba(99,102,241,0.13);
        transition: var(--transition);
        outline: none;
        position: relative;
        overflow: hidden;
      }
      .btn-primary {
        background: var(--primary);
        color: white;
      }
      .btn:after {
        content: '';
        position: absolute;
        top: -60%;
        left: -30%;
        width: 160%;
        height: 220%;
        background: linear-gradient(115deg, var(--cyan), transparent 60%);
        opacity: 0.12;
        filter: blur(24px);
        z-index: 0;
        pointer-events: none;
        transition: opacity 0.24s cubic-bezier(.47,1.64,.41,.8);
      }
      .btn-primary:hover, .btn:hover {
        background: var(--primary-dark);
        color: #fff;
        box-shadow: 0 1.5px 16px rgba(90,0,160,0.13);
      }

      .section-title {
        text-align: center;
        font-size: 2.2rem;
        margin: 2.75rem 0 1.5rem 0;
        font-weight: 800;
        color: var(--primary);
        letter-spacing: -1px;
      }

      /* PRODUCTS GRID */
      .products-grid {
        display: grid;
        gap: 2.2rem;
        grid-template-columns: repeat(auto-fit, minmax(285px, 1fr));
        padding-bottom: 3rem;
      }
      .product-card {
        background: var(--glass);
        border: 1.5px solid var(--border);
        border-radius: var(--radius);
        padding: 1.7rem 1.3rem 2.1rem 1.3rem;
        box-shadow: var(--shadow);
        backdrop-filter: var(--card-blur);
        opacity: 0;
        transform: translateY(45px) scale(0.98);
        transition: var(--transition);
        will-change: transform, opacity;
        display: flex;
        flex-direction: column;
        align-items: stretch;
        min-height: 410px;
        overflow: hidden;
        position: relative;
      }
      .product-card.visible {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
      .product-card:before {
        content: '';
        position: absolute;
        top: -40px;
        right: -40px;
        width: 130px;
        height: 130px;
        background: radial-gradient(circle, var(--accent) 0%, transparent 80%);
        opacity: 0.08;
        pointer-events: none;
      }
      .product-image {
        width: 100%;
        border-radius: var(--radius);
        object-fit: cover;
        height: 170px;
        margin-bottom: 1.05rem;
        box-shadow: 0 2px 10px 0 rgba(60,60,100,0.04);
        transition: transform .25s cubic-bezier(.39,1.63,.41,.8);
      }
      .product-card:hover .product-image {
        transform: scale(1.04) rotate(-1.5deg);
      }
      .product-title {
        font-size: 1.19rem;
        color: var(--primary);
        font-weight: 700;
        margin-bottom: 0.4rem;
        display: flex;
        align-items: center;
        gap: 0.55em;
      }
      .product-title i {
        font-size: 1.13em;
        color: var(--accent);
      }
      .product-price {
        font-size: 1.07rem;
        font-weight: 600;
        color: #444;
        margin-bottom: 0.73rem;
      }
      .product-description {
        font-size: 1.02rem;
        color: var(--text-light);
        flex: 1 1 auto;
        margin-bottom: 1.03rem;
      }
      .product-actions {
        display: flex;
        justify-content: center;
        align-items: flex-end;
        margin-top: auto;
      }
      .product-actions .btn {
        width: auto;
        min-width: 120px;
        font-size: 1.01rem;
        margin: 0;
        background: linear-gradient(100deg, var(--primary) 60%, var(--accent));
        border-radius: 10px;
        box-shadow: 0 1.5px 8px 0 rgba(99,102,241,0.12);
      }
      .product-actions .btn:hover, .product-actions .btn:focus {
        background: linear-gradient(95deg, var(--cyan), var(--primary));
        box-shadow: 0 8px 20px 0 rgba(99,102,241,0.17);
      }
      .empty-state {
        text-align: center;
        background: var(--glass);
        border: 2px dashed var(--border);
        padding: 2.7rem 1.1rem;
        border-radius: var(--radius);
        margin: 3rem 0;
        color: var(--text-light);
        box-shadow: 0 2px 10px 0 rgba(99,102,241,0.05);
      }
      @media (max-width: 900px) {
        .hero h1 { font-size: 2rem; }
        main { padding: 1rem; }
        .section-title { font-size: 1.34rem; }
      }
      @media (max-width: 600px) {
        .hero { min-height: 36vh; }
        .products-grid { gap: 1.1rem; }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section class="hero animate-on-scroll animate__animated animate__fadeInUp">
        <div class="hero-bg"></div>
        <h1>Unleash Your Gaming Potential</h1>
        <p>Premium tools and enhancements.<br>Trusted by thousands since Cold War. Discover the next level.</p>
        <div class="hero-btns">
          <a href="#products" class="btn btn-primary">Browse Shop</a>
        </div>
      </section>
      <section id="products">
        <h2 class="section-title">Available Products</h2>
        {products.length > 0 ? (
          <ul class="products-grid">
            {products.map((product, index) => (
              <li class="product-card" style={`animation-delay:${index * 0.09}s`}>
                <a href={`/shop/${product.id}/`} tabindex="-1" aria-hidden="true" style="display:block;">
                  <img src={product.data.heroImage} alt={product.data.title} class="product-image" />
                  <div>
                    <div class="product-title">
                      <i class={product.data.icon || 'fa-solid fa-box'}></i> {product.data.title}
                    </div>
                    <div class="product-price">${product.data.price}</div>
                    <p class="product-description">{product.data.description}</p>
                  </div>
                </a>
                <div class="product-actions">
                  <a href={`/shop/${product.id}/`} class="btn">View Details</a>
                </div>
              </li>
            ))}
          </ul>
        ) : (
          <div class="empty-state">
            <h3>Shop is Empty</h3>
            <p>Our team is working on new drops. Check back soon!</p>
          </div>
        )}
      </section>
    </main>
    <Footer />
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const observer = new IntersectionObserver(entries => {
          entries.forEach(entry => {
            if (entry.isIntersecting) entry.target.classList.add('visible');
          });
        }, { threshold: 0.1 });
        document.querySelectorAll('.animate-on-scroll, .product-card').forEach(el => observer.observe(el));
      });
    </script>
  </body>
</html>
