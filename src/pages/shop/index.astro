---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';
import { getCollection } from 'astro:content';

let products = [];
try {
  const shopCollection = await getCollection('shop');
  if (shopCollection?.length) {
    products = shopCollection.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
  }
} catch (error) {
  console.error('Error loading products:', error);
}
---

<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} Shop`} description="Premium gaming enhancements and tools" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <style is:global>
      :root {
        --primary: #6366f1;
        --accent: #818cf8;
        --bg: #f6f8fc;
        --text: #22223b;
        --muted: #737373;
        --card-bg: rgba(255,255,255,0.8);
        --card-blur: blur(10px);
        --border: #e5e7eb;
        --radius: 16px;
        --shadow: 0 8px 32px 0 rgba(99, 102, 241, 0.10), 0 1.5px 3.5px rgba(0,0,0,0.03);
        --transition: all 0.3s cubic-bezier(.4,0,.2,1);
      }

      html, body {
        font-family: 'Inter', sans-serif;
        background: var(--bg);
        color: var(--text);
        margin: 0;
        scroll-behavior: smooth;
      }

      main {
        max-width: 1200px;
        margin: auto;
        padding: 2.5rem 1rem 2rem 1rem;
      }

      .hero {
        min-height: 65vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        background: linear-gradient(100deg, #e0e7ff 0%, #f6f8fc 100%);
        border-radius: var(--radius);
        margin-bottom: 2rem;
        box-shadow: 0 2px 24px 0 rgba(99, 102, 241, 0.06);
        position: relative;
        overflow: hidden;
        z-index: 1;
      }

      .hero::after {
        content: '';
        position: absolute;
        top: 10%;
        left: 30%;
        width: 240px;
        height: 240px;
        background: radial-gradient(circle, rgba(99,102,241,0.09) 0%, transparent 70%);
        z-index: 0;
        filter: blur(2px);
        animation: fadePulse 8s infinite alternate;
      }
      @keyframes fadePulse {
        0% { opacity: 0.7; }
        100% { opacity: 1; }
      }

      .hero-content {
        position: relative;
        z-index: 1;
        padding: 2.5rem 1.5rem;
      }
      .hero h1 {
        font-size: 3rem;
        font-weight: 800;
        letter-spacing: -1px;
        margin-bottom: 0.75rem;
        color: var(--primary);
      }
      .hero p {
        font-size: 1.25rem;
        color: var(--muted);
        margin-bottom: 1.25rem;
      }
      .btn {
        display: inline-block;
        background: var(--primary);
        color: white;
        padding: 0.8rem 2.2rem;
        border-radius: var(--radius);
        font-weight: 600;
        text-decoration: none;
        font-size: 1rem;
        box-shadow: 0 2px 10px 0 rgba(99,102,241,0.07);
        transition: var(--transition);
      }
      .btn:hover, .btn:focus {
        background: var(--accent);
        transform: translateY(-2px) scale(1.04);
        box-shadow: 0 8px 24px 0 rgba(99, 102, 241, 0.13);
      }

      .section-title {
        text-align: center;
        font-size: 2.2rem;
        margin: 2.75rem 0 1.5rem 0;
        font-weight: 700;
        color: var(--text);
      }

      .products-grid {
        display: grid;
        gap: 2rem;
        grid-template-columns: repeat(auto-fit, minmax(270px, 1fr));
        padding-bottom: 3rem;
      }

      .product-card {
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 1.3rem 1.2rem 1.8rem 1.2rem;
        box-shadow: var(--shadow);
        backdrop-filter: var(--card-blur);
        opacity: 0;
        transform: translateY(35px) scale(0.98);
        transition: var(--transition);
        will-change: transform, opacity;
        display: flex;
        flex-direction: column;
        align-items: stretch;
      }

      .product-card.visible {
        opacity: 1;
        transform: translateY(0) scale(1);
      }

      .product-image {
        width: 100%;
        border-radius: var(--radius);
        object-fit: cover;
        height: 175px;
        margin-bottom: 1.1rem;
        box-shadow: 0 2px 10px 0 rgba(60,60,100,0.05);
      }

      .product-title {
        font-size: 1.24rem;
        color: var(--primary);
        font-weight: 700;
        margin-bottom: 0.4rem;
        display: flex;
        align-items: center;
        gap: 0.55em;
      }

      .product-title i {
        font-size: 1.08em;
        color: var(--accent);
      }

      .product-price {
        font-size: 1.14rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 0.7rem;
      }

      .product-description {
        font-size: 1rem;
        color: var(--muted);
        flex: 1 1 auto;
      }

      .product-card .btn {
        margin-top: 1.1rem;
        font-size: 0.98rem;
        width: 100%;
      }

      .empty-state {
        text-align: center;
        background: var(--card-bg);
        border: 2px dashed var(--border);
        padding: 2.5rem 1rem;
        border-radius: var(--radius);
        margin: 3rem 0;
        color: var(--muted);
      }

      @media (max-width: 900px) {
        .hero h1 { font-size: 2.2rem; }
        main { padding: 1rem; }
        .section-title { font-size: 1.5rem; }
      }
      @media (max-width: 600px) {
        .hero-content { padding: 1.1rem 0.1rem; }
        .hero { min-height: 36vh; }
        .products-grid { gap: 1.1rem; }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section class="hero">
        <div class="hero-content">
          <h1>Unleash Your Gaming Potential</h1>
          <p>Premium tools and enhancements, trusted by thousands since Cold War. Discover the next level.</p>
          <a href="#products" class="btn">Browse Shop</a>
        </div>
      </section>
      <section id="products">
        <h2 class="section-title">Available Products</h2>
        {products.length > 0 ? (
          <ul class="products-grid">
            {products.map((product, index) => (
              <li class="product-card" style={`animation-delay:${index * 0.09}s`}>
                <a href={`/shop/${product.id}/`}>
                  <img src={product.data.heroImage} alt={product.data.title} class="product-image" />
                  <div>
                    <div class="product-title">
                      <i class={product.data.icon || 'fa-solid fa-box'}></i> {product.data.title}
                    </div>
                    <div class="product-price">${product.data.price}</div>
                    <p class="product-description">{product.data.description}</p>
                    <a href={`/shop/${product.id}/`} class="btn">View Details</a>
                  </div>
                </a>
              </li>
            ))}
          </ul>
        ) : (
          <div class="empty-state">
            <h3>Shop is Empty</h3>
            <p>Our team is working on new drops. Check back soon!</p>
          </div>
        )}
      </section>
    </main>
    <Footer />
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const observer = new window.IntersectionObserver(entries => {
          entries.forEach(entry => {
            if (entry.isIntersecting) entry.target.classList.add('visible');
          });
        }, { threshold: 0.07 });
        document.querySelectorAll('.product-card').forEach(el => observer.observe(el));
      });
    </script>
  </body>
</html>
