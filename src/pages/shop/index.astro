---
// Import components and constants
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

// Get shop items with error handling
let products = [];
try {
  const shopCollection = await getCollection('shop');
  if (shopCollection && shopCollection.length > 0) {
    products = shopCollection.sort(
      (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
    );
  }
} catch (error) {
  console.error('Error loading products:', error);
}
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} Shop`} description="Premium gaming enhancements and tools" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style is:global>
      :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --text: #1f2937;
        --text-light: #6b7280;
        --bg: #f0f4f8;
        --card: #ffffff;
        --border: #e5e7eb;
        --radius: 12px;
        --shadow: 0 4px 12px rgba(0, 0, 0, 0.1);
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: 'Inter', sans-serif;
        color: var(--text);
        background: var(--bg);
        line-height: 1.6;
        scroll-behavior: smooth;
      }

      main {
        max-width: 1200px;
        margin: auto;
        padding: 2rem 1.5rem;
      }

      .hero {
        position: relative;
        height: 60vh; /* Full height for a striking appearance */
        background: url('path/to/your/background-image.jpg') no-repeat center center/cover; /* Full-width background image */
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 2rem;
      }

      .hero-content {
        background: rgba(0, 0, 0, 0.6); /* Semi-transparent background for better text visibility */
        border-radius: var(--radius);
        padding: 2rem;
      }

      .hero h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        text-transform: uppercase; /* Make the title more impactful */
      }

      .hero p {
        font-size: 1.25rem;
        margin: 0 auto 1.5rem;
        max-width: 600px; /* Limit width for better readability */
      }

      .btn-hero {
        background: var(--primary);
        color: white;
        padding: 0.75rem 2rem;
        border-radius: var(--radius);
        font-weight: 600;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.3s ease;
      }

      .btn-hero:hover {
        background: var(--primary-dark);
        transform: scale(1.05); /* Slightly enlarge on hover */
      }

      .products-grid {
        display: grid;
        gap: 2rem;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        list-style: none;
        padding: 0;
      }

      .product-card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
      }

      .product-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
      }

      .product-content {
        padding: 1.5rem;
      }

      .product-title {
        font-size: 1.5rem;
        margin: 0 0 0.5rem;
        color: var(--primary);
      }

      .product-price {
        font-weight: 600;
        color: var(--primary);
        font-size: 1.2rem;
        margin: 0.5rem 0;
      }

      .product-description {
        color: var(--text-light);
        font-size: 1rem;
        margin: 0.75rem 0;
      }

      .section-title {
        text-align: center;
        font-size: 2rem;
        margin: 3rem 0 1.5rem;
        color: var(--text);
      }

      .empty-state {
        text-align: center;
        padding: 3rem;
        background: var(--card);
        border-radius: var(--radius);
        border: 1px dashed var(--border);
      }

      @media (max-width: 768px) {
        .hero h1 {
          font-size: 2.5rem;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    
    <main>
      <section class="hero">
        <div class="hero-content">
          <h1>Unleash Your Gaming Potential</h1>
          <p>Join the ranks of elite players with our premium gaming tools designed for performance and precision.</p>
          <a href="#products" class="btn btn-hero">Shop Now</a>
        </div>
      </section>

      <section aria-label="Our Products">
        <h2 class="section-title">Shop Products</h2>
        
        {products.length > 0 ? (
          <ul class="products-grid">
            {products.map((product, index) => (
              <li class="product-card">
                <a href={`/shop/${product.id}/`} class="product-link">
                  <img 
                    src={product.data.heroImage} 
                    alt={product.data.title}
                    class="product-image"
                    loading={index < 3 ? 'eager' : 'lazy'}
                    width={400}
                    height={200}
                  />
                  <div class="product-content">
                    <h3 class="product-title">
                      <i class={product.data.icon || 'fas fa-gamepad'}></i>
                      {product.data.title}
                    </h3>
                    <div class="product-price">${product.data.price}</div>
                    <p class="product-description">{product.data.description}</p>
                    <a href={`/shop/${product.id}/`} class="btn">View Details</a>
                  </div>
                </a>
              </li>
            ))}
          </ul>
        ) : (
          <div class="empty-state">
            <h3>Our Shop is Currently Empty</h3>
            <p>We're preparing some amazing products for you. Please check back soon!</p>
          </div>
        )}
      </section>
    </main>
    
    <Footer />

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const animatedEls = document.querySelectorAll('.product-card');
        const observer = new IntersectionObserver(entries => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
            }
          });
        }, { threshold: 0.1 });

        animatedEls.forEach(el => observer.observe(el));
      });
    </script>
  </body>
</html>
